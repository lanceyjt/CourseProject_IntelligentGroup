{
    "manifest_version": 3,
  
    "name": "Intelligent Search",
    "description": "This extension gives bm25 scores, word frequency and topics covered in web documents.",
    "version": "1.0",

    "action": {
      "default_popup": "popup.html"
    },
  
    "background": {
      "service_worker": "background.js"
    },

    "permissions": [
        "tabs",
        "background",
        "identity",
        "notifications",
        "nativeMessaging",
        "activeTab"
    ],

    "host_permissions": [
          "http://127.0.0.1:8000/*",
          "http://*/*",
          "https://*/*"
      ]
  }